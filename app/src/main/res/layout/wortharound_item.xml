<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/W_ProductImg"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/jky_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <TextView
            android:textColor="#000000"
            android:id="@+id/W_Name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:text="潮流休闲破洞牛仔夹克"
            android:textSize="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥"
                android:textColor="#ff0000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/NewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/$"
                android:text="29.90"
                android:textColor="#ff0000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/yuanjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/NewPrice"
                android:text="原价"
                android:textColor="#cccccc"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/$2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/yuanjia"
                android:text="￥"
                android:textColor="#cccccc"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/OldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/$2"
                android:text="49.90"
                android:textColor="#cccccc"
                android:textSize="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/Discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.20"
                android:textColor="#cccccc"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/zhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Discount"
                android:text="折"
                android:textColor="#cccccc"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/yishou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/zhe"
                android:text="已售"
                android:textColor="#cccccc"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/SaleTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/yishou"
                android:text="368"
                android:textColor="#cccccc"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/SaleTotal"
                android:text="件"
                android:textColor="#cccccc"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/IsBaoYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="包邮"
                android:textColor="#cccccc"
                android:textSize="10dp" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>