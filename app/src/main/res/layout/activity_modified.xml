<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#d61a3b">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:clickable="true"
            android:onClick="onClick_back"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@+id/imageView"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="#FFFFFF"
            android:textSize="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="19dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editText_nowPwd"
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:hint="现在的密码"
        android:textColorHint="#cccccc"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText_newPwd"
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:hint="新的密码"
        android:textColorHint="#cccccc"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editText_verifyPwd"
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:hint="确认新的密码"
        android:textColorHint="#cccccc"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20.5dp"
        android:layout_marginRight="20.5dp"
        android:layout_marginTop="25.2dp"
        android:background="#d61a3b"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick_save"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="21dp" />
    </LinearLayout>

</LinearLayout>